<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:padding="20dp"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="" />

        <TextView
            android:id="@+id/windSpeedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timeView"
            android:padding="8dp"
            android:text=""
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="-2dp" />

        <TextView
            android:id="@+id/maxGustView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_below="@+id/windSpeedView"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="187dp" />

        <TextView
            android:id="@+id/temperatureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:layout_below="@+id/maxGustView"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="46dp" />

        <TextView
            android:id="@+id/precipitationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_below="@+id/temperatureView"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="101dp" />


        <TextView
            android:id="@+id/fogView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:layout_below="@+id/precipitationView"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/locationNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:padding="8dp"
            android:text=""
            android:layout_below="@+id/fogView"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="143dp" />

        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="ImageOfWeather"
            app:srcCompat="@drawable/ic_notifications_black_24dp" />

        <Button
            android:id="@+id/lagreLokasjonsKnapp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/weatherImageView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/explanationOfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lagreLokasjonsKnapp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:text="Lagre:" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/precipitationView"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="12sp"
            android:text="Klikk for neste dagers vÃ¦rvarsel" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
