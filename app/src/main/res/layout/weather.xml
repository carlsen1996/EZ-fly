    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayBar"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/daybar_shape"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tempContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/daybar_shape">

            <TextView
                android:id="@+id/tempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70Â°C"
                android:layout_marginTop="4dp"
                android:textFontWeight="1"
                android:textColor="@color/quantum_white_100"
                android:textSize="40sp"
                android:fontFamily="@font/lato_light"/>

            <TextView
                android:id="@+id/minTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/tempValue"
                android:text="Min: 3"
                android:textColor="@color/quantum_white_100"
                android:fontFamily="@font/lato_regular"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/tempValue"
                android:text="Max: 3"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/quantum_white_100"
                android:textSize="10sp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/daybar_shape">

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="ImageOfWeather"
                app:srcCompat="@drawable/ic_notifications_black_24dp" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/windContainer"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@color/quantum_grey800"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="38dp"
