<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="70dp"
        android:layout_marginTop="7dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:background="@color/quantum_grey400" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/daybar_shape">

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@color/quantum_black_100"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayBar"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/daybar_shape"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tempContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/daybar_shape">

            <TextView
                android:id="@+id/tempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70Â°C"
                android:layout_marginTop="4dp"
                android:textFontWeight="1"
                android:textColor="@color/quantum_white_100"
                android:textSize="40sp"
                android:fontFamily="@font/lato_light"/>

            <TextView
                android:id="@+id/minTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/tempValue"
                android:text="Min: 3"
                android:textColor="@color/quantum_white_100"
                android:fontFamily="@font/lato_regular"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxTempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/tempValue"
                android:text="Max: 3"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/quantum_white_100"
                android:textSize="10sp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/daybar_shape">

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="ImageOfWeather"
                app:srcCompat="@drawable/ic_notifications_black_24dp" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/windContainer"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@color/quantum_grey800"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="38dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_winds"
            android:layout_centerInParent="true">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sunContainer"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/daybar_shape"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="262dp"
        ></RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/daybar_shape"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/kpindexView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:text="Kp Index"
            android:textColor="@color/quantum_white_100" />


        <TextView
            android:id="@+id/visibilityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="visibility"
            android:textColor="@color/quantum_white_100" />

        <TextView
            android:id="@+id/precipitationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:text="precipitation"
            android:textColor="@color/quantum_white_100" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/lagreLokasjonsKnapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bottomBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:src="@android:drawable/btn_star_big_off"
        android:visibility="visible" />

    <TextView
        android:id="@+id/locationNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bottomBar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="-41dp"
        android:text="placeholder address" />

</RelativeLayout>
