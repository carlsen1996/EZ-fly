<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="70dp"
        android:layout_marginTop="7dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:background="@color/quantum_grey400" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/daybar_shape">

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@color/quantum_black_100"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tempContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayBar"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/daybar_shape">

        <TextView
            android:id="@+id/tempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/quantum_white_100"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/minTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/tempValue"
            android:text="Min: 3"
            android:textColor="@color/quantum_white_100"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/maxTempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/tempValue"
            android:text="Max: 3"
            android:textColor="@color/quantum_white_100"
            android:textSize="10sp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/windContainer"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/daybar_shape"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="38dp"
        ></RelativeLayout>

    <RelativeLayout
        android:id="@+id/sunContainer"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/daybar_shape"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="262dp"
        ></RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/daybar_shape"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/kpindextext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:text="Kp Index"
            android:textColor="@color/quantum_white_100" />

        <TextView
            android:id="@+id/visibilitytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="visibility"
            android:textColor="@color/quantum_white_100" />

        <TextView
            android:id="@+id/precipitationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:text="precipitation"
            android:textColor="@color/quantum_white_100" />
    </RelativeLayout>
    <TextView
        android:id="@+id/day0"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:text="" />

    <TextView
        android:id="@+id/day1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/day0"
        android:padding="8dp"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/day2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text=""
        android:layout_alignParentStart="true"
        android:layout_below="@+id/day1"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/day3"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text=""
        android:layout_below="@+id/day2"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/day4"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text=""
        android:layout_alignParentStart="true"
        android:layout_below="@+id/day3"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="101dp" />


    <TextView
        android:id="@+id/day5"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text=""
        android:layout_below="@+id/day4"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="143dp" />

    <TextView
        android:id="@+id/addressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomBar"
        android:layout_alignBottom="@+id/bottomBar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="-47dp"
        android:layout_toStartOf="@+id/lagreLokasjonsKnapp"
        android:text="Adresse" />

    <TextView
        android:id="@+id/locationNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:padding="8dp"
        android:text=""
        android:layout_below="@+id/day5"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="143dp" />

    <ImageView
        android:id="@+id/weatherImageView"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="ImageOfWeather"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />


    <Button
        android:id="@+id/lagreLokasjonsKnapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomBar"
        android:layout_alignBottom="@+id/bottomBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="-42dp"
        android:text="Lagre sted" />

    <TextView
        android:id="@+id/textView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/day4"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:text="Klikk for neste dagers vÃ¦rvarsel" />
</RelativeLayout>
