<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:divider="@drawable/empty_tall_divider"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle"
    android:visibility="visible"
    app:behavior_peekHeight="55dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/gotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:src="@android:drawable/ic_menu_compass"
            android:visibility="visible" />



        <EditText
            android:id="@+id/locationNameEditTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/quantum_black_100"
            android:textStyle="bold"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/storeNewAddressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:padding="7dp"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="gone" />


        <TextView
            android:id="@+id/locationNameView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/WXML_placeholderadress"
            android:textColor="@color/quantum_black_100"
            android:textStyle="bold"
            android:visibility="visible" />


        <ImageButton
            android:id="@+id/lagreLokasjonsKnapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:src="@android:drawable/star_big_off"
            android:visibility="visible" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/dayBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/daybar_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/today"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_man"
            android:textColor="@color/radio_color"></RadioButton>

        <RadioButton
            android:id="@+id/tommorow"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_tir"
            android:textColor="@color/radio_color"></RadioButton>

        <RadioButton
            android:id="@+id/third"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_ons"
            android:textColor="@color/radio_color"></RadioButton>

        <RadioButton
            android:id="@+id/fourth"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_tor"
            android:textColor="@color/radio_color"></RadioButton>

        <RadioButton
            android:id="@+id/fifth"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_fre"
            android:textColor="@color/radio_color"></RadioButton>

        <RadioButton
            android:id="@+id/sixth"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_loer"
            android:textColor="@color/radio_color"></RadioButton>

        <RadioButton
            android:id="@+id/seventh"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@color/quantum_black_100"
            android:button="@drawable/empty_radio"
            android:gravity="center"
            android:text="@string/WXML_soen"
            android:textColor="@color/radio_color"></RadioButton>

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hourScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/daybar_shape">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/daybar_shape"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/kpIndexText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="@string/WXML_kpinx"
                android:textColor="@color/quantum_white_100" />

            <TextView
                android:id="@+id/kpIndexValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kpIndexText"
                android:layout_centerHorizontal="true"
                android:text="@string/WXML_StefanKarlStefanson"
                android:textColor="@color/quantum_white_100" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/visiblityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/WXML_sikt"
                android:textColor="@color/quantum_white_100" />

            <TextView
                android:id="@+id/visibilityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/visiblityText"
                android:layout_centerHorizontal="true"
                android:text="@string/WXML_10km"
                android:textColor="@color/quantum_white_100" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/precipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/WXML_nedboer"
                android:textColor="@color/quantum_white_100" />

            <TextView
                android:id="@+id/precipValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precipText"
                android:layout_centerHorizontal="true"
                android:text="@string/WXML_76"
                android:textColor="@color/quantum_white_100" />


        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
