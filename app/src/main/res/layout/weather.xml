        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:background="@drawable/daybar_button_shape"
            android:textColor="@color/quantum_white_100"
            android:text="man">
        </Button>

        <Button
